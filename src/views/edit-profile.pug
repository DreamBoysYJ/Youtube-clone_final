extends base

block title


    form(method="POST", enctype="multipart/form-data") 
        img.avatar-image(src="/" + loggedInUser.avatarUrl)
        label(for="avatar") Avatar Img
        input(type="file", accept="image/*", id="avatar", name="avatar")
        input(name="username",type="text", placeholder="USER NAME", value=loggedInUser.username, required)
        input(name="email", type="email", placeholder="E-MAIL" value=loggedInUser.email required)        
        input(type="submit", value="Edit", )

        if loggedInUser.socialOnly === false
            button.join__btn
                a(href="edit-profile/change-password")  Change Password
        

